{{#each errors}}
<div class="alert alert-danger text-center" dismissOnTimeout="2000">{{text}}</div>
{{else}}

{{/each}}

<div class="container">
    <card class="card-body">
        <h3 class="text-center">
           Edit Idea
        </h3>
        <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="put">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" value="{{idea.title}}" name="title" required>
            </div>
            <div class="form-group">
                <label for="details">Details</label>
                <textarea type="text" class="form-control" rows="10" value name="details" required> {{idea.details}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </card>
</div>